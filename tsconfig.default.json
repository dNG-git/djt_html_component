{
    "compilerOptions": {
        "target": "es2017",
        "lib": [ "dom", "es2017" ],
        "module": "esnext",
        "moduleResolution": "node",

        "declaration": true,
        "inlineSources": true,
        "jsx": "react",
        "jsxFactory": "createElement",
        "jsxFragmentFactory": "Fragment",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": false,
        "sourceMap": true
    },

    "include": [ "./src/**/*" ]
}
